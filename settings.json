// Description: This file contains user-specific settings for Visual Studio Code.
// You can customize various aspects of the editor, workbench, and extensions here.
{
    //"vim.disableExtension": true, // Disable Vim extension. Uncomment this line to disable the Vim extension when opening VS Code.
    "telemetry.telemetryLevel": "off",
    "telemetry.enableCrashReporter": false, // Disable crash reporter to avoid sending data to Microsoft.
    "security.workspace.trust.untrustedFiles": "open",
    // Editor settings.
    "editor.minimap.autohide": true,
    "editor.fontSize": 16,
    "editor.accessibilitySupport": "off",
    "editor.fontFamily": "Lilex Nerd Font",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "files.autoSave": "afterDelay",
    // Theme settings.
    "window.commandCenter": true,
    "window.menuBarVisibility": "compact",
    "workbench.layoutControl.enabled": false,
    "workbench.startupEditor": "none",
    "workbench.sideBar.location": "right",
    "workbench.colorCustomizations": {
        "terminal.background": "#1f1f1f",
        "terminal.foreground": "#14da3f",
        "statusBar.background": "#1f1f1f",
        "statusBar.noFolderBackground": "#1f1f1f",
        "statusBar.debuggingBackground": "#2ebb12",
        "statusBar.foreground": "#a0d622"
    },
    // Testing some settings (not sure if they work).
    "workbench.editorAssociations": {
        "*.xml": "workbench.editorinputs.searchEditorInput",
        "*.pdf": "default"
    },
    // Python settings.
    "python.defaultInterpreterPath": "C:\\LegacyApp\\Python39\\python.exe",
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.experiments.enabled": false,
    "files.associations": {"*.py": "python"},
    "autoDocstring.includeName": true,
    "autoDocstring.customTemplatePath": "D:\\p_ta3\\docstrings_template\\custom_template.txt",
    "jupyter.debugJustMyCode": false,
    "notebook.outline.showCodeCells": true,
    // Vim settings.
    "vim.operatorPendingModeKeyBindingsNonRecursive": [],
    "vim.visualstar": true,
    // PowerShell and terminal settings.
    //"terminal.external.windowsExec": "C:\\LegacyApp\\powershell\\pwsh.exe",
    "terminal.explorerKind": "both",
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.accessibleViewFocusOnCommandExecution": false,
    "powershell.enableReferencesCodeLens": false,
    "powershell.integratedConsole.startInBackground": true,
    "powershell.integratedConsole.showOnStartup": false,
    "powershell.powerShellDefaultVersion": "C:\\LegacyApp\\powershell\\pwsh.exe",
    "powershell.powerShellAdditionalExePaths": {
        "Legacy PowerShell": "C:\\LegacyApp\\powershell\\pwsh.exe"
    },
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "path": "C:\\LegacyApp\\powershell\\pwsh.exe",
            "args": [],
            "icon": "terminal-powershell",
            "name": "PWSH"
        }
    },
    // C# settings.
    "csharp.inlayHints.enableInlayHintsForImplicitObjectCreation": true,
    "csharp.inlayHints.enableInlayHintsForImplicitVariableTypes": true,
    "csharp.inlayHints.enableInlayHintsForLambdaParameterTypes": true,
    "csharp.inlayHints.enableInlayHintsForTypes": true,
    // Git/GitHub/GitLens settings.
    "git.autofetch": true,
    "github-enterprise.uri": "https://github.vitesco.io/",
    "gitlens.ai.model": "vscode",
    "gitlens.ai.vscode.model": "copilot:gpt-3.5-turbo",
    "gitlens.gitCommands.skipConfirmations": [
        "fetch:command",
        "stash-push:command",
        "switch:command"
    ],
    // C/C++ settings.
    "C_Cpp.default.compilerPath": "c:\\LegacyApp\\mingw\\20200128\\bin\\bin\\gcc.exe",
}
